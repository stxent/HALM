choice
	prompt "Optimization level"
	default OPTIMIZATIONS_DISABLED

	config OPTIMIZATIONS_DISABLED
		bool "None"

	config OPTIMIZATIONS_SIZE
		bool "Size"

	config OPTIMIZATIONS_FULL
		bool "Full"

endchoice

config OPT_LEVEL
	string
	default "none" if OPTIMIZATIONS_DISABLED
	default "size" if OPTIMIZATIONS_SIZE
	default "full" if OPTIMIZATIONS_FULL

choice
	prompt "Processor family"
	default FAMILY_LPC11XX

	config FAMILY_LPC11XX
		bool "NXP LPC11xx"

	config FAMILY_LPC11EXX
		bool "NXP LPC11Exx"

	config FAMILY_LPC13XX
		bool "NXP LPC13xx"

	config FAMILY_LPC17XX
		bool "NXP LPC175x and LPC176x"

	config FAMILY_LPC43XX
		bool "NXP LPC43xx"

endchoice

config CPU_FAMILY
	string
	default "LPC11XX"   if FAMILY_LPC11XX
	default "LPC11EXX"  if FAMILY_LPC11EXX
	default "LPC13XX"   if FAMILY_LPC13XX
	default "LPC17XX"   if FAMILY_LPC17XX
	default "LPC43XX"   if FAMILY_LPC43XX

menu "Core peripherals"

config CORE_CORTEX_SYSTICK
	bool "System Timer"
	help
	  Enable building of System Timer (SysTick) driver.

config PM
	bool "Power management"
	help
	  Enable power management features.

endmenu

menu "Processor peripherals"

config PLATFORM_GPIO_BUS
	bool "GPIO Bus"

config PLATFORM_NXP_ADC_BASE
	bool "ADC"

config PLATFORM_NXP_DAC_BASE
	bool "DAC"
	depends on FAMILY_LPC17XX || FAMILY_LPC43XX

config PLATFORM_NXP_GPDMA
	bool "GPDMA"
	depends on FAMILY_LPC17XX || FAMILY_LPC43XX

config PLATFORM_NXP_GPTIMER_BASE
	bool "General-purpose timer"

config PLATFORM_NXP_GPTIMER_PM
	bool "Power management for general-purpose timers"
	depends on PLATFORM_NXP_GPTIMER_BASE && PM

config PLATFORM_NXP_GPTIMER
	bool "Common timer on general-purpose timer"
	depends on PLATFORM_NXP_GPTIMER_BASE

config PLATFORM_NXP_GPTIMER_CAPTURE
	bool "Input capture on general-purpose timer"
	depends on PLATFORM_NXP_GPTIMER_BASE

config PLATFORM_NXP_GPTIMER_PWM
	bool "PWM on general-purpose timer"
	depends on PLATFORM_NXP_GPTIMER_BASE && (FAMILY_LPC11XX || FAMILY_LPC11EXX || FAMILY_LPC13XX)

config PLATFORM_NXP_GPPWM
	bool "PWM"
	depends on FAMILY_LPC17XX

config PLATFORM_NXP_I2C_BASE
	bool "I2C"

config PLATFORM_NXP_PIN_INTERRUPT
	bool "Pin interrupts"

config PLATFORM_NXP_SDMMC
	bool "SD/MMC card interface"
	depends on FAMILY_LPC43XX

config PLATFORM_NXP_SCT_BASE
	bool "State Configurable Timer"
	depends on FAMILY_LPC43XX

config PLATFORM_NXP_SCT_TIMER
	bool "Common timer on State Configurable Timer"
	depends on PLATFORM_NXP_SCT_BASE

config PLATFORM_NXP_SSP_BASE
	bool "SSP"

config PLATFORM_NXP_UART_BASE
	bool "UART"

config PLATFORM_NXP_WDT
	bool "Watchdog"

endmenu

menu "Interfaces"

config ONE_WIRE
	bool "1-Wire"
	depends on PLATFORM_NXP_SSP_BASE || PLATFORM_NXP_UART_BASE

config PLATFORM_NXP_ONE_WIRE_SSP
	bool "1-Wire driver on SSP peripheral"
	depends on ONE_WIRE && PLATFORM_NXP_SSP_BASE

config PLATFORM_NXP_ONE_WIRE_UART
	bool "1-Wire driver on UART peripheral"
	depends on ONE_WIRE && PLATFORM_NXP_UART_BASE

config ADC
	bool "ADC drivers"
	depends on PLATFORM_NXP_ADC_BASE

config PLATFORM_NXP_ADC
	bool "Simplified ADC driver with polling"
	depends on ADC && PLATFORM_NXP_ADC_BASE

config PLATFORM_NXP_ADC_BURST
	bool "Interrupt-driven ADC"
	depends on ADC && PLATFORM_NXP_ADC_BASE

config PLATFORM_NXP_ADC_DMA
	bool "Single channel ADC driver with DMA"
	depends on ADC && PLATFORM_NXP_ADC_BASE && PLATFORM_NXP_GPDMA

config DAC
	bool "DAC drivers"
	depends on PLATFORM_NXP_DAC_BASE

config PLATFORM_NXP_DAC
	bool "Simplified DAC driver"
	depends on DAC && PLATFORM_NXP_DAC_BASE

config PLATFORM_NXP_DAC_DMA
	bool "DAC driver with DMA"
	depends on DAC && PLATFORM_NXP_DAC_BASE && PLATFORM_NXP_GPDMA

config I2C
	bool "I2C drivers"
	depends on PLATFORM_NXP_I2C_BASE

config PLATFORM_NXP_I2C_PM
	bool "Power management for I2C drivers"
	depends on I2C && PM

config PLATFORM_NXP_I2C
	bool "I2C Master"
	depends on I2C && PLATFORM_NXP_I2C_BASE

config PLATFORM_NXP_I2C_SLAVE
	bool "I2C Slave"
	depends on I2C && PLATFORM_NXP_I2C_BASE

config SERIAL
	bool "Serial port"
	depends on PLATFORM_NXP_UART_BASE

config PLATFORM_NXP_SERIAL_PM
	bool "Power management for serial port drivers"
	depends on SERIAL && PM

config PLATFORM_NXP_SERIAL
	bool "Interrupt-driven serial port driver"
	depends on SERIAL && PLATFORM_NXP_UART_BASE

config PLATFORM_NXP_SERIAL_POLL
	bool "Serial port driver with polling"
	depends on SERIAL && PLATFORM_NXP_UART_BASE

config PLATFORM_NXP_SERIAL_DMA
	bool "Serial port driver with DMA"
	depends on SERIAL && PLATFORM_NXP_UART_BASE && PLATFORM_NXP_GPDMA

config SPI
	bool "SPI"
	depends on PLATFORM_NXP_SSP_BASE

config PLATFORM_NXP_SPI
	bool "Interrupt-driven SPI Master"
	depends on SPI && PLATFORM_NXP_SSP_BASE

config PLATFORM_NXP_SPI_DMA
	bool "SPI Master with DMA"
	depends on SPI && PLATFORM_NXP_SSP_BASE && PLATFORM_NXP_GPDMA

config PLATFORM_NXP_SDIO_SPI
	bool "SDIO over SPI"
	depends on SPI

config PLATFORM_SDCARD
	bool "SD Card driver"

endmenu
