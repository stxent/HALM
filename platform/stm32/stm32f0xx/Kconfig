	default y
	depends on PLATFORM_STM32_SPI_BASE

config PLATFORM_STM32_SPI2
	bool "SPI2"
	default y
	depends on PLATFORM_STM32_SPI_BASE
	help
	  SPI2 is available on STM32F04x, STM32F05x, STM32F07x and
	  STM32F09x devices only.

endmenu

