menu "Enabled peripherals"

menu "Basic DMA Controllers"

config PLATFORM_STM32_BDMA1
	bool "BDMA1"
	default y
	depends on PLATFORM_STM32_BDMA

config PLATFORM_STM32_BDMA2
	bool "BDMA2"
	default n
	depends on PLATFORM_STM32_BDMA

endmenu

menu "I2C"

config PLATFORM_STM32_I2C1
	bool "I2C1"
	default y
	depends on PLATFORM_STM32_I2C_BASE

config PLATFORM_STM32_I2C2
	bool "I2C2"
	default y
	depends on PLATFORM_STM32_I2C_BASE

endmenu

menu "General Purpose Timers"

config PLATFORM_STM32_TIM1
	bool "TIM1"
	default y
	depends on PLATFORM_STM32_GPTIMER_BASE

config PLATFORM_STM32_TIM2
	bool "TIM2"
	default y
	depends on PLATFORM_STM32_GPTIMER_BASE

config PLATFORM_STM32_TIM3
	bool "TIM3"
	default y
	depends on PLATFORM_STM32_GPTIMER_BASE

config PLATFORM_STM32_TIM6
	bool "TIM6"
	default y
	depends on PLATFORM_STM32_GPTIMER_BASE
	help
	  TIM6 is available on STM32F05x, STM32F07x and STM32F09x devices only.

config PLATFORM_STM32_TIM7
	bool "TIM7"
	default y
	depends on PLATFORM_STM32_GPTIMER_BASE
	help
	  TIM7 is available on STM32F07x and STM32F09x devices only.

config PLATFORM_STM32_TIM14
	bool "TIM14"
	default y
	depends on PLATFORM_STM32_GPTIMER_BASE

config PLATFORM_STM32_TIM15
	bool "TIM15"
	default y
	depends on PLATFORM_STM32_GPTIMER_BASE
	help
	  TIM15 is not available on STM32F03x devices.

config PLATFORM_STM32_TIM16
	bool "TIM16"
	default y
	depends on PLATFORM_STM32_GPTIMER_BASE

config PLATFORM_STM32_TIM17
	bool "TIM17"
	default y
	depends on PLATFORM_STM32_GPTIMER_BASE

endmenu

menu "SPI"

